{
  "version": "2.3.1",
  "license": "MIT",
  "description": "A library for interfacing with Motion Blinds from Coulisse B.V",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "dts watch",
    "build": "dts build",
    "test": "dts test",
