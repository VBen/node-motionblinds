  "module": "dist/motionblinds.esm.js",
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "dts-cli": "^2.0.5",
    "husky": "^9.1.4",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^5.0.0",
    "**/@typescript-eslint/parser": "^5.0.0"
